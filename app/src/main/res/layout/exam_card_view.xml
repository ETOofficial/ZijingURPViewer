<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题区域 -->
        <TextView
            android:id="@+id/exam_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ExamTitle"
            android:textColor="#1A237E"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- 信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/exam_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExamName"
                android:textColor="#424242"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/exam_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExamTime"
                android:textColor="#424242"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/exam_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExamAddress"
                android:textColor="#424242"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/exam_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ExamTicket"
                android:textColor="#1A237E"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                tools:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
